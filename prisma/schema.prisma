generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(uuid())
  email        String           @unique
  name         String?
  passwordHash String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  roles        UserTenantRole[]
}

model Tenant {
  id                   String                 @id @default(uuid())
  name                 String
  slug                 String?                @unique
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  users                UserTenantRole[]
  whatsappIntegrations WhatsAppIntegration[]
  availableNumbers     TenantAvailableNumber[]
  webhookLogs          WebhookLog[]
  messageLogs          MessageLog[]
}

model UserTenantRole {
  id        String   @id @default(uuid())
  userId    String
  tenantId  String
  role      String   // owner | admin | member
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@unique([userId, tenantId])
}

model WhatsAppIntegration {
  id                    String   @id @default(uuid())
  tenantId              String
  metaAppId             String
  metaAppSecret         String?
  metaUserId            String?
  wabaId                String
  phoneNumberId         String
  phoneNumber           String
  verifyTokenWebhook    String
  accessTokenShortLived String?
  accessTokenLongLived  String?
  tokenExpiresAt        DateTime?
  status                String   @default("disconnected")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  tenant              Tenant              @relation(fields: [tenantId], references: [id])
  webhookLogs         WebhookLog[]
  messageLogs         MessageLog[]

  @@unique([tenantId, phoneNumberId])
}

model TenantAvailableNumber {
  id                 String   @id @default(uuid())
  tenantId           String
  wabaId             String
  phoneNumberId      String
  displayPhoneNumber String?
  verifiedName       String?
  capabilities       Json?
  createdAt          DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, phoneNumberId])
}

model WebhookLog {
  id                    String               @id @default(uuid())
  tenantId              String
  whatsappIntegrationId String?
  eventType             String?
  payload               Json
  createdAt             DateTime             @default(now())

  tenant              Tenant               @relation(fields: [tenantId], references: [id])
  whatsappIntegration WhatsAppIntegration? @relation(fields: [whatsappIntegrationId], references: [id])
}

model MessageLog {
  id                    String               @id @default(uuid())
  tenantId              String
  whatsappIntegrationId String?
  messageId             String?
  direction             String               // IN | OUT
  status                String?
  payload               Json?
  to                    String?
  from                  String?
  createdAt             DateTime             @default(now())

  tenant              Tenant               @relation(fields: [tenantId], references: [id])
  whatsappIntegration WhatsAppIntegration? @relation(fields: [whatsappIntegrationId], references: [id])
}
